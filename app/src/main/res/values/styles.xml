<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogMessageStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:padding">@dimen/button_default_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab"></style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/colorWhite</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
        <item name="android:minHeight">@dimen/custom_tab_height</item>
        <item name="tabIndicatorColor">@color/transparent</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin_half</item>
    </style>

    <style name="CustomTabIcon">
        <!--<item name="android:textColor">@color/ic_custom_tab_text</item>-->
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/custom_tab_text</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:paddingRight">@dimen/custom_tab_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/custom_tab_padding</item>
        <!--<item name="android:paddingBottom">@dimen/custom_tab_padding</item>-->
    </style>

    <style name="AccentButtonRounded">
        <item name="android:textSize">@dimen/accent_button_text</item>
        <item name="android:background">@drawable/ic_accent_button_rounded</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/default_elevation</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">@dimen/accent_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/accent_button_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/accent_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/accent_button_horizontal_padding</item>
    </style>

    <style name="AccentButton">
        <item name="android:textSize">@dimen/accent_button_text</item>
        <item name="android:background">@drawable/ic_accent_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">@dimen/accent_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/accent_button_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/accent_button_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/accent_button_horizontal_padding</item>
    </style>

    <style name="OnboardingFormField">
        <item name="android:layout_marginTop">@dimen/onboarding_form_vertical_spacing</item>
        <item name="android:layout_marginLeft">@dimen/onboarding_form_margin</item>
        <item name="android:layout_marginRight">@dimen/onboarding_form_margin</item>
    </style>

    <style name="OnboardingFormInputField">
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ProfileDetailsItem">
        <item name="android:layout_marginRight">@dimen/activity_margin</item>
        <item name="android:paddingLeft">@dimen/profile_details_item_padding</item>
    </style>

    <style name="ProfileDetails">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/profileSubHeaderText</item>
        <item name="android:layout_marginBottom">@dimen/profile_details_item_padding</item>
        <item name="android:textSize">@dimen/profile_details_title</item>
    </style>

    <style name="ProfileDetailsValue" parent="ProfileDetails">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/profile_details_value</item>
    </style>

    <style name="NewsHeaderIcon">
        <item name="android:layout_marginLeft">@dimen/news_header_icon_margin</item>
        <item name="android:layout_marginRight">@dimen/news_header_icon_margin</item>
    </style>

    <style name="BaseTitle">
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ItemNewsDetailTitle" parent="BaseTitle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/news_detail_header_title</item>
        <item name="android:textAllCaps">true</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="SettingsSecTitle">
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">@dimen/settings_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/settings_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/settings_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/settings_margin_horizontal</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SettingsItem">
        <item name="android:minLines">1</item>
        <item name="android:layout_marginLeft">@dimen/settings_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/settings_margin_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/settingsTitleText</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SettingsItemDescription">
        <item name="android:minLines">1</item>
        <item name="android:layout_marginLeft">@dimen/settings_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/settings_margin_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/settings_desc_spacing</item>
        <item name="android:textColor">@color/settingsDescriptionText</item>
    </style>

    <style name="SettingsItemDivider">
        <item name="android:layout_marginTop">@dimen/settings_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/settings_margin_vertical</item>
        <item name="android:background">@drawable/ic_settings_divider</item>
    </style>

    <style name="OptionMenuItem">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/news_detail_menu_item</item>
        <item name="android:paddingLeft">@dimen/news_detail_menu_padding</item>
        <item name="android:paddingRight">@dimen/news_detail_menu_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/news_detail_menu_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/news_detail_menu_item_padding_vertical</item>
    </style>
</resources>
