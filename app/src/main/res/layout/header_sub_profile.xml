<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_margin_half"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/profile_name"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fp_name"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fp_profile_detail_stories_sec"
            style="@style/ProfileDetailsItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fp_profile_detail_stories"
                style="@style/ProfileDetailsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fp_profile_detail_stories_hint"
                style="@style/ProfileDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/collections" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fp_profile_detail_likes_sec"
            style="@style/ProfileDetailsItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fp_profile_detail_likes"
                style="@style/ProfileDetailsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fp_profile_detail_likes_hint"
                style="@style/ProfileDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/likes" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>