<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_detail_footer_height"
    android:layout_alignParentBottom="true"
    android:paddingLeft="@dimen/news_detail_header_padding"
    android:paddingRight="@dimen/news_detail_header_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ind_no_of_likes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ind_like"
            android:layout_width="@dimen/news_detail_footer_icon"
            android:layout_height="@dimen/news_detail_footer_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/news_detail_footer_icon_margin"
            android:src="@drawable/ic_unlike" />

        <ImageView
            android:id="@+id/ind_share"
            android:layout_width="@dimen/news_detail_footer_icon"
            android:layout_height="@dimen/news_detail_footer_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/news_detail_footer_icon_margin"
            android:src="@drawable/ic_share" />

        <ImageView
            android:id="@+id/ind_menu"
            android:layout_width="@dimen/news_detail_footer_icon"
            android:layout_height="@dimen/news_detail_footer_icon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_more" />
    </LinearLayout>
</RelativeLayout>