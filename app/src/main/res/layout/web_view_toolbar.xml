<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorWhite"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_detail_footer_height"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/news_detail_header_padding"
        android:paddingRight="@dimen/news_detail_header_padding">

        <ImageView
            android:id="@+id/awv_like"
            android:layout_width="@dimen/news_detail_footer_icon"
            android:layout_height="@dimen/news_detail_footer_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_margin_half"
            android:src="@drawable/ic_unlike" />

        <ImageView
            android:id="@+id/awv_share"
            android:layout_width="@dimen/news_detail_footer_icon"
            android:layout_height="@dimen/news_detail_footer_icon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_share" />
    </LinearLayout>
</android.support.v7.widget.Toolbar>