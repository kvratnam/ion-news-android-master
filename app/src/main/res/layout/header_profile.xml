<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:fitsSystemWindows="true"
    android:minHeight="@dimen/profile_header_min_height"
    app:layout_collapseMode="parallax">

    <TextView
        android:id="@+id/fp_profile"
        android:layout_width="@dimen/profile_header_image"
        android:layout_height="@dimen/profile_header_image"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:background="@drawable/ic_user_icon"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/profile_header_image_text" />
</RelativeLayout>