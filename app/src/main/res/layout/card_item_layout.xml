<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ipg_image"
            android:src="@drawable/logo"
            android:padding="5dp"
            android:layout_height="120dp"
            android:layout_width="120dp"/>

        <View
            android:layout_width="5dp"
            android:background="@color/colorButton"
            android:layout_height="match_parent"
            android:layout_margin="3dp" />


        <TextView
            android:id="@+id/ipg_title"
            android:text="@string/log_in"
            android:gravity="center"
            android:textSize="@dimen/news_detail_title"
            android:textStyle="normal"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/ipg_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/likes_item_padding"
        android:layout_marginLeft="@dimen/likes_item_padding"
        android:layout_marginRight="@dimen/likes_item_padding"
        android:ellipsize="end"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/likes_item_news"
        android:visibility="gone" />

</android.support.v7.widget.CardView>
